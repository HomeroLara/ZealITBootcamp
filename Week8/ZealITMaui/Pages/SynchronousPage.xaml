<?xml version="1.0" encoding="utf-8"?>

<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:ZealITMaui.ViewModels"
    x:Class="ZealITMaui.Pages.SynchronousPage">
    
    <ContentPage.BindingContext>
        <viewmodels:SynchronousViewModel/>
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout 
                Spacing="10"
                Padding="50">
                <Label 
                    Text="Breakfast 🍽️" 
                    FontSize="24" 
                    HorizontalOptions="Center" />
                
                <Image
                    WidthRequest="100"
                    HeightRequest="100"
                    Source="{ Binding DownloadImage}"/>
                
                <Button 
                    Text="Start Cooking" 
                    Command="{Binding StartCookingCommand}"
                    IsEnabled="{Binding IsCooking, Converter={StaticResource InverseBoolConverter}}"
                    BackgroundColor="Green" 
                    TextColor="White"
                    Padding="10"
                    FontSize="18" />
                
                <Button 
                    Text="Button Test UI" 
                    x:Name="ButtonTestUI"
                    BackgroundColor="Orange"
                    Clicked="ButtonTestUI_OnClicked"
                    TextColor="White"
                    Padding="10"
                    FontSize="18" />

                <CollectionView 
                    ItemsSource="{Binding CookingSteps}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Label 
                                Text="{Binding}" 
                                FontSize="18" 
                                Padding="5"/>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>